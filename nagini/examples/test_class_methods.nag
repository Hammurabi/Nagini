class Point:
    x: int
    y: int
    
    def distance_from_origin(self) -> int:
        # sqrt(x^2 + y^2) - simplified to integer
        return self.x * self.x + self.y * self.y

@property(malloc_strategy='gc', layout='cpp', paradigm='object')
class Rectangle:
    width: int
    height: int
    
    def area(self) -> int:
